###################                  Новые налоги                  #################
####################################################################################

thema nalroot, "Корень по налогам" ,  idx=200, abst :
	import assoifin
	
	usefilials = true
	fordetailA = true

thema nalext, "Налоговое расширение", idx = 210, parent=nal,  abst :
	import nalroot

nalroot nal, "Налоги (новые)", parent=nalog_group :
	import fordesign
	activeB = false
	activeC = false
	fl_visibleA = false
	rb_visibleA = false
	configview = "nal_config"
	formset A :
		col STUB
		param anyobject : true

nalext nal_rate, "Нормативы распределения налогов" :
	import fordesign
	usetownfilter = true
	layout_extension = "naloglist"
	activeB = false
	activeC = false
	tableviewA = rates_table
	fl_visibleA = false
	rb_visibleA = false
	usefilials = false
	fordetailA = false
	formset A :
		col STUB
		param anyobject : true
		
nalext nal_saldo, "Входящее сальдо по налогу" :
	import fordesign
	layout_extension = ""
	activeB = false
	activeC = false
	tableviewA = saldo_table
	fl_visibleA = false
	rb_visibleA = false
	formset A :
		col STUB
		param anyobject : true


